<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.boot.dao.ChatRoomDAO">

<!-- 	<resultMap id="fileMap" type="AttachFile">
		<result property="fileNo" column="fileno" />
		<result property="boardId" column="boardid" />
    </resultMap> -->
	<insert id="createRoom">
		insert into chat_room(
							room_id
							,room_name
							,receiver
							,sender
					) values(
						#{room_id}
						,#{room_name}
						,#{receiver}
						,#{sender}
					)
	</insert>	
	<delete id="deleteRoom">
		delete from chat_room
		where room_id = #{room_id}
	</delete>
	<select id="selectRoomList" resultType="ChatRoom">
		select room_id
			,room_name
			,receiver
			,sender
		from chat_room
		where receiver=#{receiver} or sender=#{sender}
	</select>
</mapper>